{
  "name": "esbuild-plugin-just-copy",
  "version": "0.1.0",
  "description": "ESBuild plugin for assets copy.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
